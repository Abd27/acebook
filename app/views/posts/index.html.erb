
<%= link_to new_post_path do %>
  New post
<% end %>
          
<% @posts.reverse.each do |post| %>
  <form action='/posts/<%= post.id %>/like'>
    <%= post.message %>, <%= post.likes %> like<%= 's' if post.likes != 1 %>
    <input type='submit' value="❤️"> <br>
  </form>
    <br>
    <h2> <%= post.comments.count %> Comments</h2>
      <h3>Add a Comment: </h3>
      <%= form_for([post, post.comments.build]) do |f| %>
        <p>
          <%= f.label :name %>
          <%= f.text_field :name %>
        </p>
        <p>
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </p>
        <br>
        <p>
          <%= f.submit %>
        </p>
      <% end %>
    <br>
<% end %>
